<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/projetofinal</property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="show_sql">true</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.connection.release_mode">after_transaction</property>
		<property name="hibernate.transaction.flush_before_completion">true</property>
		<property name="hibernate.transaction.auto_close_session">true</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<mapping class="br.unigranrio.bean.requisito.Projeto"/> 
		<mapping class="br.unigranrio.bean.requisito.Ator"/>
		<mapping class="br.unigranrio.bean.requisito.CasoDeUso"/>
		<mapping class="br.unigranrio.bean.requisito.CasoDeUsoAtor"/>
		<mapping class="br.unigranrio.bean.requisito.Fluxo"/>
		<mapping class="br.unigranrio.bean.requisito.Passo"/>
		<mapping class="br.unigranrio.bean.requisito.PosCondicao"/>
		<mapping class="br.unigranrio.bean.requisito.PreCondicao"/>
		<mapping class="br.unigranrio.bean.requisito.RegraDeNegocio"/>
		<mapping class="br.unigranrio.bean.requisito.RequisitoNaoFuncional"/>
	</session-factory>
</hibernate-configuration>